<?xml version="1.0"?>

<!-- 2x2 lattice simple pin cell -->

<geometry>

<!-- Definition of Cells -->
  <cell id="1" universe="0" fill="5" surfaces="1 -2 3 -4" />
  <cell id="101" universe="1" material="1" surfaces="-5" sectors="4"/>
  <cell id="102" universe="1" material="2" surfaces="5"  sectors="8"/>
  <cell id="103" universe="2" material="1" surfaces="-6" sectors="4"/>
  <cell id="104" universe="2" material="2" surfaces="6"  sectors="8"/>
<!-- Definition of Lattices -->
  <lattice id="5">
    <type>rectangular</type>
    <dimension>4 4</dimension>
    <width>1.26 1.26</width>
    <universes>
      1 2 2 1
      2 1 1 2
	  1 2 2 1
	  2 1 1 2
    </universes>
  </lattice>

<!-- Definition of Surfaces -->
  <surface id="1" type="x-plane" coeffs="-2.52" boundary="reflective"/>
  <surface id="2" type="x-plane" coeffs="2.52"  boundary="reflective"/>
  <surface id="3" type="y-plane" coeffs="-2.52" boundary="reflective" />
  <surface id="4" type="y-plane" coeffs="2.52"  boundary="reflective"/>
  <surface id="5" type="circle"  coeffs="0.0 0.0 0.10" />
  <surface id="6" type="circle"  coeffs="0.0 0.0 0.60" />
</geometry>
