<?xml version="1.0"?>

<!-- 4x4 lattice of 1cm x 1cm
     with three types of pin cells (diameters 0.2cm, 0.3cm, 0.4cm). -->


<geometry>

<!-- Definition of Cells -->
  <cell id="1" universe="0" fill="5" surfaces="1 -2 3 -4" />
  <cell id="101" universe="1" material="1" surfaces="-5"/>
  <cell id="102" universe="1" material="2" surfaces="5"/>
  <cell id="201" universe="2" material="1" surfaces="-6"/>
  <cell id="202" universe="2" material="1" surfaces="6"/>
<!-- Definition of Lattices -->
  <lattice id="5">
    <type>rectangular</type>
    <dimension>2 2</dimension>
    <width>100.0 100.0</width>
    <universes>
      2 2
      2 2
    </universes>
  </lattice>

<!-- Definition of Surfaces -->
  <surface id="1" type="x-plane" coeffs="-100.0" boundary="reflective"/>
  <surface id="2" type="x-plane" coeffs="100.0"  boundary="reflective"/>
  <surface id="3" type="y-plane" coeffs="-100.0" boundary="reflective" />
  <surface id="4" type="y-plane" coeffs="100.0"  boundary="reflective"/>
  <surface id="5" type="circle"  coeffs="0.0 0.0 0.25" />
  <surface id="6" type="circle"  coeffs="0.0 0.0 0.28" />
</geometry>
